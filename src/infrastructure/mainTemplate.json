{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "tenant": {
      "type": "string",
      "defaultValue": ""
    },
    "service_principal": {
      "type": "string",
      "defaultValue": ""
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev"
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope"
    },
    "storage_sku": {
      "type": "string",
      "defaultValue": "Standard_LRS"
    },
    "asp_sku": {
      "type": "string",
      "defaultValue": "B1"
    },
    "retention_days": {
      "type": "int",
      "defaultValue": 30
    }
  },
  "functions": [],
  "variables": {
    "function_app_name": "clock-dev-funcapp",
    "app_insights_name": "clock-dev-appinsights",
    "guid": "pid-634ee6d0-daae-4676-8dcf-20e9062d36de"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "[variables('guid')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "clock-dev-akv",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[parameters('tenant')]",
        "softDeleteRetentionInDays": 60,
        "sku": {
          "name": "standard",
          "family": "A"
        },
        "accessPolicies": [
          {
            "tenantId": "[parameters('tenant')]",
            "objectId": "[parameters('service_principal')]",
            "permissions": {
              "secrets": [
                "get",
                "list",
                "set"
              ]
            }
          },
          {
            "tenantId": "[parameters('tenant')]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('function_app_name')), '2020-06-01', 'Full').identity.principalId]",
            "permissions": {
              "secrets": [
                "get",
                "list",
                "set"
              ]
            }
          }
        ]
      },
      "tags": {
        "environment": "[parameters('environment')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('function_app_name'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "clock0dev0stac",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "[parameters('storage_sku')]"
      },
      "properties": {
        "accessTier": "Cool"
      },
      "tags": {
        "environment": "[parameters('environment')]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[variables('function_app_name')]",
      "location": "[parameters('location')]",
      "tags": {
        "environment": "[parameters('environment')]"
      },
      "kind": "functionapp,linux",
      "properties": {
        "reserved": true,
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', 'clock0dev0stac', ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', 'clock0dev0stac'), '2019-06-01').keys[0].value)]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('app_insights_name')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~1"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "dotnet"
            }
          ]
        }
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('app_insights_name'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', 'clock0dev0stac')]"
      ]
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2015-05-01",
      "name": "[variables('app_insights_name')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "tags": {
        "environment": "[parameters('environment')]"
      },
      "properties": {
        "Application_Type": "web"
      }
    }
  ]
}